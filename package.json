{
  "name": "arukara",
  "version": "1.0.0",
  "author": "Matthew D'Alessandro",
  "license": "ISC",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn clean && run-p build:server build:client",
    "build:client": "NODE_ENV=production webpack --config webpack.config.prod.js -p ./src/index.jsx",
    "build:client:watch": "webpack --config webpack.config.dev.js --mode development --watch ./src/index.jsx",
    "build:server": "npx babel server --out-dir dist",
    "build:server:watch": "nodemon --watch server --exec babel-node server/index.js",
    "build:stats": "yarn clean && NODE_ENV=production webpack --config webpack.config.prod.js -p --profile --json ./src/index.jsx > bundle-stats.json && webpack-bundle-analyzer bundle-stats.json dist/public",
    "clean": "rimraf dist",
    "dev": "yarn clean && run-p build:server:watch build:client:watch",
    "lint": "eslint --ext .jsx --ext .js .",
    "start": "node dist/index.js",
    "start:cron": "pm2 start dist/index.js",
    "test": "run-s lint test:unit",
    "test:unit": "run-s test:unit:client:nowatch test:unit:server:nowatch",
    "test:unit:client": "karma start",
    "test:unit:client:nowatch": "karma start --single-run --no-watch",
    "test:unit:server": "./node_modules/.bin/nodemon --watch server --watch test/unit/server --exec mocha test/unit/server/**/*.js --compilers js:babel-register",
    "test:unit:server:nowatch": "mocha test/unit/server/**/*.js --no-watch --compilers js:babel-register"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mDalessandro/YumeGaArukara.git"
  },
  "engines": {
    "node": ">=12.16.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-security": "^1.4.0",
    "file-loader": "^2.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "karma": "^3.0.0",
    "karma-chai": "^0.1.0",
    "karma-chai-as-promised": "^0.1.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^3.0.0",
    "lodash-webpack-plugin": "^0.11.5",
    "mini-css-extract-plugin": "^0.4.1",
    "mocha": "^5.2.0",
    "node-sass": "^4.14.1",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "portfinder": "^1.0.28",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "sinon": "^6.1.5",
    "sinon-chai": "^3.5.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "url-loader": "^1.1.0",
    "webpack": "^4.16.5",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.1.0",
    "yarn": "^1.22.10"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "isomorphic-fetch": "^2.2.1",
    "lodash-es": "^4.17.14",
    "mime-types": "^2.1.27",
    "minimist": "^1.2.5",
    "node-fetch": "^2.6.1",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  }
}
